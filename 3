    <script>
        // ìº”ë²„ìŠ¤ ì„¤ì •
        const canvas = document.getElementById('parallaxCanvas');
        const ctx = canvas.getContext('2d');

        // ê³ ì •ëœ ì‹œë®¬ë ˆì´ì…˜ ì¢Œí‘œê³„ ì •ì˜ (í™”ë©´ í¬ê¸° ë³€í™”ì— ë¬´ê´€í•˜ê²Œ ë‚´ë¶€ ë¹„ìœ¨ ìœ ì§€)
        const SIM_WIDTH = 800;
        const SIM_HEIGHT = 550;
        const SUN_POS = { x: SIM_WIDTH / 2, y: SIM_HEIGHT / 2 + 50 }; // íƒœì–‘ ìœ„ì¹˜ë¥¼ ì•½ê°„ ì•„ë˜ë¡œ ì´ë™
        const AU_CANVAS_RADIUS = 150; // 1 AUì— í•´ë‹¹í•˜ëŠ” ìº”ë²„ìŠ¤ ë‹¨ìœ„ ê±°ë¦¬

        // ìƒíƒœ ë³€ìˆ˜
        let earthAngle = 0; // ì§€êµ¬ì˜ í˜„ì¬ ê³µì „ ê°ë„ (ë¼ë””ì•ˆ)
        let animationSpeed = 0.005; // ê³µì „ ì†ë„ (í”„ë ˆì„ë‹¹ ë¼ë””ì•ˆ)
        
        // ë³„ ë°ì´í„° ì´ˆê¸°ê°’
        const STARS = [
            { name: 'ë³„ X', distance: 350, color: '#f97316', id: 'starX' }, // orange-500
            { name: 'ë³„ Y', distance: 600, color: '#facc15', id: 'starY' }  // yellow-400
        ];

        // --- ê³„ì‚° ë° ë³€í™˜ í•¨ìˆ˜ ---
        
        // ì—°ì£¼ì‹œì°¨ ë° ê±°ë¦¬ ê³„ì‚° í•¨ìˆ˜
        function calculateParallaxData(distance) {
            // p_rad = atan(AU / distance)
            const p_rad_visual = Math.atan(AU_CANVAS_RADIUS / distance);

            // ì‹¤ì œ ê³¼í•™ì  ê´€ê³„ë¥¼ ë°˜ì˜í•˜ê¸° ìœ„í•œ ìŠ¤ì¼€ì¼ë§ (1pc = 1 arcsec)
            // atan(1 AU / 1 pc) = 1 arcsec
            // ì—¬ê¸°ì„œ AU_CANVAS_RADIUSë¥¼ 1 AUë¡œ, distanceë¥¼ pc ë‹¨ìœ„ë¡œ ê°€ì •í•  ìˆ˜ ì—†ìœ¼ë¯€ë¡œ,
            // ì‹œê°ì ì¸ p_rad_visualì„ ì´ìš©í•˜ì—¬ d=1/p ê³µì‹ì— ë§ê²Œ p_arcsecë¥¼ "ì‹œë®¬ë ˆì´ì…˜"í•©ë‹ˆë‹¤.
            
            // ì„ì˜ì˜ ìŠ¤ì¼€ì¼ íŒ©í„° (ì‹œì°¨ë¥¼ ì‘ê²Œ ë§Œë“¤ì–´ì„œ arcsec ë‹¨ìœ„ì²˜ëŸ¼ ë³´ì´ê²Œ í•¨)
            const PARALLAX_SCALE_FACTOR = 1000; 
            const p_arcsec = (p_rad_visual * 180 / Math.PI * 3600) / PARALLAX_SCALE_FACTOR;
            
            // ê±°ë¦¬(pc) = 1 / ì—°ì£¼ì‹œì°¨(arcsec)
            const distance_pc = 1 / p_arcsec;

            return {
                p_rad: p_rad_visual,
                p_arcsec: p_arcsec,
                distance_pc: distance_pc
            };
        }

        // --- ìº”ë²„ìŠ¤ í¬ê¸° ì¡°ì • ë° ì´ˆê¸°í™” ---

        function resizeCanvas() {
            const container = document.getElementById('canvas-container');
            // ìº”ë²„ìŠ¤ ë¬¼ë¦¬ì  í¬ê¸°ë¥¼ ì»¨í…Œì´ë„ˆì— ë§ì¶¤
            canvas.width = container.clientWidth;
            canvas.height = container.clientHeight;
        }

        window.addEventListener('resize', resizeCanvas);
        resizeCanvas();

        // --- ë Œë”ë§ í•¨ìˆ˜ ---

        function drawParallaxDiagram() {
            // 1. ìº”ë²„ìŠ¤ ì´ˆê¸°í™” ë° ë³€í™˜ (í™”ë©´ ì¤‘ì•™ ì •ë ¬ì„ ìœ„í•´)
            ctx.fillStyle = '#0d1117';
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            // SIM_WIDTH/SIM_HEIGHTë¥¼ ì‹¤ì œ ìº”ë²„ìŠ¤ í¬ê¸°ì— ë§ê²Œ ìŠ¤ì¼€ì¼ë§ ë° ì´ë™
            const scaleX = canvas.width / SIM_WIDTH;
            const scaleY = canvas.height / SIM_HEIGHT;
            const scale = Math.min(scaleX, scaleY); // ìµœì†Œê°’ìœ¼ë¡œ ë¹„ìœ¨ ìœ ì§€
            
            ctx.save();
            // ì¤‘ì•™ ì •ë ¬ ë° ìŠ¤ì¼€ì¼ ì ìš©
            ctx.translate(canvas.width / 2 - (SIM_WIDTH / 2) * scale, canvas.height / 2 - (SIM_HEIGHT / 2) * scale);
            ctx.scale(scale, scale);
            
            // ê³ ì • ë°°ê²½ ë³„ (ë°°ê²½ì˜ ì›í˜• í˜¸)
            ctx.strokeStyle = 'rgba(255, 255, 255, 0.2)';
            ctx.lineWidth = 1;
            ctx.beginPath();
            ctx.arc(SUN_POS.x, SUN_POS.y, 800, 0, Math.PI * 2);
            ctx.stroke();
            
            // 2. íƒœì–‘ ê·¸ë¦¬ê¸°
            ctx.fillStyle = '#fdb813'; // Sun color
            ctx.beginPath();
            ctx.arc(SUN_POS.x, SUN_POS.y, 15, 0, Math.PI * 2);
            ctx.fill();
            ctx.fillStyle = 'white';
            ctx.font = '14px Noto Sans KR';
            ctx.fillText('íƒœì–‘', SUN_POS.x + 20, SUN_POS.y);

            // 3. ì§€êµ¬ ê¶¤ë„ ê·¸ë¦¬ê¸°
            ctx.strokeStyle = '#2563eb'; // blue-700
            ctx.lineWidth = 2;
            ctx.beginPath();
            ctx.arc(SUN_POS.x, SUN_POS.y, AU_CANVAS_RADIUS, 0, Math.PI * 2);
            ctx.stroke();

            // 4. ì§€êµ¬ ìœ„ì¹˜ ê³„ì‚°
            const earthX = SUN_POS.x + AU_CANVAS_RADIUS * Math.cos(earthAngle);
            const earthY = SUN_POS.y + AU_CANVAS_RADIUS * Math.sin(earthAngle);

            // 6ê°œì›” ì „/í›„ (A/B ì§€ì )
            const angleA = Math.PI * 0; // A: 0 ë¼ë””ì•ˆ (ì˜¤ë¥¸ìª½)
            const angleB = Math.PI * 1; // B: 180ë„ (ì™¼ìª½)
            
            const earthAX = SUN_POS.x + AU_CANVAS_RADIUS * Math.cos(angleA);
            const earthAY = SUN_POS.y + AU_CANVAS_RADIUS * Math.sin(angleA);
            const earthBX = SUN_POS.x + AU_CANVAS_RADIUS * Math.cos(angleB);
            const earthBY = SUN_POS.y + AU_CANVAS_RADIUS * Math.sin(angleB);

            // 4-1. A ì§€ì  ê·¸ë¦¬ê¸°
            ctx.fillStyle = '#3b82f6';
            ctx.beginPath();
            ctx.arc(earthAX, earthAY, 8, 0, Math.PI * 2);
            ctx.fill();
            ctx.fillStyle = 'white';
            ctx.fillText('A', earthAX + 10, earthAY + 5);

            // 4-2. B ì§€ì  ê·¸ë¦¬ê¸°
            ctx.fillStyle = '#3b82f6';
            ctx.beginPath();
            ctx.arc(earthBX, earthBY, 8, 0, Math.PI * 2);
            ctx.fill();
            ctx.fillStyle = 'white';
            ctx.fillText('B', earthBX - 20, earthBY + 5);

            // 4-3. í˜„ì¬ ì§€êµ¬ ê·¸ë¦¬ê¸°
            ctx.fillStyle = '#3b82f6'; // blue-500
            ctx.beginPath();
            ctx.arc(earthX, earthY, 10, 0, Math.PI * 2);
            ctx.fill();
            ctx.fillStyle = 'white';
            ctx.fillText('ì§€êµ¬', earthX + 15, earthY + 5);


            // 5. ë³„ ê·¸ë¦¬ê¸° ë° ì‹œì°¨/ì‹œì„  í‘œì‹œ
            STARS.forEach(star => {
                const data = calculateParallaxData(star.distance);
                star.data = data;
                
                // ë³„ ìœ„ì¹˜ (Yì¶•ì€ SIM_HEIGHT ì¤‘ì•™ ê¸°ì¤€, ë³„ì€ ìœ„ìª½ì— ìœ„ì¹˜)
                const starYPos = SUN_POS.y - star.distance;
                const starPos = { x: SUN_POS.x, y: starYPos };

                // ë³„ ê·¸ë¦¬ê¸°
                ctx.fillStyle = star.color;
                ctx.beginPath();
                ctx.arc(starPos.x, starPos.y, 12, 0, Math.PI * 2);
                ctx.fill();
                ctx.fillStyle = 'white';
                ctx.font = '16px Noto Sans KR';
                ctx.fillText(star.name, starPos.x + 15, starPos.y + 5);

                // --- ì—°ì£¼ì‹œì°¨($p$) ê° í‘œì‹œ (Sun-Star-Earth triangle) ---
                
                // íƒœì–‘ì—ì„œ ë³„ê¹Œì§€ì˜ ê¸°ì¤€ì„  (ì¤‘ì•™ ì ì„ )
                ctx.strokeStyle = 'rgba(255, 255, 255, 0.4)';
                ctx.setLineDash([5, 5]);
                ctx.beginPath();
                ctx.moveTo(SUN_POS.x, SUN_POS.y);
                ctx.lineTo(starPos.x, starPos.y);
                ctx.stroke();
                ctx.setLineDash([]); // ë‹¤ì‹œ ì‹¤ì„ ìœ¼ë¡œ ì„¤ì •

                // ì—°ì£¼ì‹œì°¨ ê° (ì§ê°ì‚¼ê°í˜•ì˜ ê°)
                // ê°ì€ A ì§€ì ì—ì„œ ê´€ì¸¡ ì‹œ (xì¶• ê¸°ì¤€)
                const starEarthX = SUN_POS.x + AU_CANVAS_RADIUS * Math.cos(angleA); // Earth A X
                const starEarthY = SUN_POS.y + AU_CANVAS_RADIUS * Math.sin(angleA); // Earth A Y
                
                // ë³„-íƒœì–‘-Aì§€ì  ê°ë„ (ì§ê°ì‚¼ê°í˜•)
                const centerAngle = Math.atan2(starEarthY - starPos.y, starEarthX - starPos.x); // ë³„ì—ì„œ Aë¥¼ ë°”ë¼ë³´ëŠ” ê°
                const sunAngle = Math.atan2(SUN_POS.y - starPos.y, SUN_POS.x - starPos.x); // ë³„ì—ì„œ íƒœì–‘ì„ ë°”ë¼ë³´ëŠ” ê° (í•­ìƒ -PI/2)
                
                const startAngle = sunAngle; // ë³„ì—ì„œ íƒœì–‘ ë°©í–¥
                const endAngle = centerAngle; // ë³„ì—ì„œ A ë°©í–¥

                ctx.strokeStyle = star.color;
                ctx.lineWidth = 1;
                ctx.beginPath();
                // arc(x, y, radius, startAngle, endAngle)
                const arcRadius = 30; // í˜¸ì˜ ë°˜ì§€ë¦„
                ctx.arc(starPos.x, starPos.y, arcRadius, startAngle, endAngle);
                ctx.stroke();
                
                // ì—°ì£¼ì‹œì°¨($p$) í…ìŠ¤íŠ¸
                const textAngle = (startAngle + endAngle) / 2;
                const textX = starPos.x + (arcRadius + 10) * Math.cos(textAngle);
                const textY = starPos.y + (arcRadius + 10) * Math.sin(textAngle);
                ctx.fillStyle = star.color;
                ctx.font = '14px Noto Sans KR';
                ctx.fillText(`p: ${data.p_arcsec.toFixed(3)}''`, textX, textY);

                // --- ì‹œì„ (Line of Sight) ê·¸ë¦¬ê¸° ---
                
                // í˜„ì¬ ì§€êµ¬ ìœ„ì¹˜ì—ì„œ ë³„ê¹Œì§€ì˜ ì‹œì„ 
                ctx.strokeStyle = star.color;
                ctx.setLineDash([3, 3]);
                ctx.lineWidth = 1;
                
                // ì‹œì„  1: ì§€êµ¬ í˜„ì¬ ìœ„ì¹˜ -> ë³„
                ctx.beginPath();
                ctx.moveTo(earthX, earthY);
                ctx.lineTo(starPos.x, starPos.y);
                
                // ì‹œì„  2: ë³„ -> ë°°ê²½ ë³„ (ìœ„ìª½ìœ¼ë¡œ ê¸¸ê²Œ ì—°ì¥)
                const angleToBackground = Math.atan2(starPos.y - earthY, starPos.x - earthX);
                const backgroundX = earthX + 1000 * Math.cos(angleToBackground);
                const backgroundY = earthY + 1000 * Math.sin(angleToBackground);
                
                ctx.lineTo(backgroundX, backgroundY);
                ctx.stroke();
                
                ctx.setLineDash([]); // ë‹¤ì‹œ ì‹¤ì„ ìœ¼ë¡œ ì„¤ì •
                
                // ë°°ê²½ ë³„ ìƒì— ì‹œì„ ì´ ë‹¿ëŠ” 'ê²‰ë³´ê¸°' ìœ„ì¹˜ í‘œì‹œ
                ctx.fillStyle = star.color;
                ctx.beginPath();
                ctx.arc(backgroundX, backgroundY, 5, 0, Math.PI * 2);
                ctx.fill();
            });

            ctx.restore(); // ìŠ¤ì¼€ì¼ë§/ì´ë™ ì›ìƒ ë³µêµ¬
        }

        // --- ì• ë‹ˆë©”ì´ì…˜ ë£¨í”„ ---
        let lastTime = 0;
        function animate(time) {
            const deltaTime = time - lastTime;
            lastTime = time;

            // ì§€êµ¬ ê°ë„ ì—…ë°ì´íŠ¸
            // ê°ë„ ê°ì†Œ ë°©í–¥ì´ ë¶ê·¹ì—ì„œ ë³¸ ì‹œì ì˜ ë°˜ì‹œê³„ ë°©í–¥ ê³µì „ì„ ì˜ë¯¸í•©ë‹ˆë‹¤.
            earthAngle -= animationSpeed * deltaTime;
            if (earthAngle < 0) {
                earthAngle += Math.PI * 2; // ê°ë„ê°€ ìŒìˆ˜ê°€ ë˜ë©´ 2*PIë¥¼ ë”í•˜ì—¬ 0~2PI ì‚¬ì´ë¡œ ìœ ì§€
            }

            // ìº”ë²„ìŠ¤ ê·¸ë¦¬ê¸°
            drawParallaxDiagram();
            
            // ë°ì´í„° ì—…ë°ì´íŠ¸
            updateDataDisplay();

            requestAnimationFrame(animate);
        }

        // --- ë°ì´í„° í‘œì‹œ ì—…ë°ì´íŠ¸ ---

        function updateDataDisplay() {
            const starX = STARS.find(s => s.id === 'starX');
            const starY = STARS.find(s => s.id === 'starY');
            
            document.getElementById('starXData').innerHTML = 
                `<span class="font-semibold">${starX.name} (ê°€ê¹Œìš´ ë³„)</span><br>
                ì‹œì°¨(p): <span class="font-mono">${starX.data.p_arcsec.toFixed(3)}''</span><br>
                ê±°ë¦¬(d): <span class="font-mono">${starX.data.distance_pc.toFixed(3)} pc</span>`;

            document.getElementById('starYData').innerHTML = 
                `<span class="font-semibold">${starY.name} (ë¨¼ ë³„)</span><br>
                ì‹œì°¨(p): <span class="font-mono">${starY.data.p_arcsec.toFixed(3)}''</span><br>
                ê±°ë¦¬(d): <span class="font-mono">${starY.data.distance_pc.toFixed(3)} pc</span>`;

             document.getElementById('distanceValue').textContent = `${starX.distance} (ìƒëŒ€ ê±°ë¦¬)`;
             document.getElementById('speedValue').textContent = `${animationSpeed.toFixed(3)}x`;
        }

        // --- ì´ë²¤íŠ¸ ë¦¬ìŠ¤ë„ˆ ---

        const distanceSlider = document.getElementById('distanceSlider');
        distanceSlider.addEventListener('input', (e) => {
            const newDistance = parseFloat(e.target.value);
            const starX = STARS.find(s => s.id === 'starX');
            starX.distance = newDistance;
            // ë³„ YëŠ” ê³ ì •ëœ ê°’ (600)ì„ ìœ ì§€í•©ë‹ˆë‹¤.
        });

        const speedSlider = document.getElementById('speedSlider');
        speedSlider.addEventListener('input', (e) => {
            animationSpeed = parseFloat(e.target.value);
        });

        // ì´ˆê¸° ì‹¤í–‰
        window.onload = function() {
            animate(0); // ì• ë‹ˆë©”ì´ì…˜ ì‹œì‘
        };

    </script>
</body>
</html>
